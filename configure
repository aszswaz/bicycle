#!/bin/zsh -e

# 在计算机上进行初始化，以使用仓库中的脚本、neovim 配置等。

# 切换路径到 init.sh 脚本所在文件夹
cd $(dirname $0)
# 加载 shell 函数
source shell/lib/index.sh

PROJECT_DIR="$PWD"

[[ ! -e bin ]] && mkdir bin
# 获取子模块
git submodule init || exit 1

for module in *; do
    if [[ ! -d $module ]]; then
        continue
    fi
    log_info "Enter the module: $module"
    cd "$module"
    [[ -r ./init.sh ]] && . ./init.sh
    log_info "To leave the module: $module"
    cd "$PROJECT_DIR"
done
