#!/bin/bash

set -o errexit

cd "$(dirname $0)"

function build() {
    git submodule init

    makepkg -f -s -i -p qemu.pkg --noconfirm
    makepkg -f -s -i -p PKGBUILD --noconfirm

    ./bicycle-config/init.sh
    ./neovim-settings/init.sh
    ./shell/init.sh
    ./tools-config/init.sh
}

function clean() {
    local file
    for file in $(find -name '*.pkg.tar.zst' -type f); do
        rm -v "$file"
    done

    files=('pkg' 'src' 'cpp/build' 'python/venv')
    for file in ${files[*]}; do
        if [[ -e $file ]]; then
            rm -rf "$file"
            echo "removed: $file"
        fi
    done
}

if [[ $1 == clean ]]; then
    clean
else
    build
fi
